<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="1.5dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:padding="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textSize="30sp"
            android:textColor="@color/black"
            tools:text="5+10-3" />

        <TextView
            android:id="@+id/output"
            android:layout_width="match_parent"
            android:layout_height="79dp"
            android:gravity="end"
            android:textColor="@color/green"
            android:textSize="30sp"
            tools:text="12" />

    </LinearLayout>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btnAC"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:layout_marginRight="2pt"
                android:backgroundTint="@color/bluebg"
                android:text="AC"
                android:textSize="26sp"
                android:textColor="@color/black">
            </Button>
            <Button
                android:id="@+id/btnbracketleft"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:layout_marginRight="2pt"
                android:backgroundTint="@color/bluebg"
                android:text="("
                android:textSize="26sp"
                android:textColor="@color/black">
            </Button>
            <Button
                android:id="@+id/btnbracketright"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:layout_marginRight="2pt"
                android:backgroundTint="@color/bluebg"
                android:text=")"
                android:textSize="26sp"
                android:textColor="@color/black">
            </Button>

            <Button
                android:id="@+id/btndivision"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:layout_marginRight="2pt"
                android:backgroundTint="@color/bluebg"
                android:text="/"
                android:textSize="26sp"
                android:textColor="@color/black">
            </Button>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btn7"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:layout_marginRight="2pt"
                android:backgroundTint="@color/bluebg"
                android:text="7"
                android:textSize="26sp"
                android:textColor="@color/black">
            </Button>
            <Button
                android:id="@+id/btn8"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:layout_marginRight="2pt"
                android:backgroundTint="@color/bluebg"
                android:text="8"
                android:textSize="26sp"
                android:textColor="@color/black">
            </Button>
            <Button
                android:id="@+id/btn9"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:layout_marginRight="2pt"
                android:backgroundTint="@color/bluebg"
                android:text="9"
                android:textSize="26sp"
                android:textColor="@color/black">
            </Button>
            <Button
                android:id="@+id/btnmultiply"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:layout_marginRight="2pt"
                android:backgroundTint="@color/bluebg"
                android:text="×"
                android:textSize="26sp"
                android:textColor="@color/black">
            </Button>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btn4"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:layout_marginRight="2pt"
                android:backgroundTint="@color/bluebg"
                android:text="4"
                android:textSize="26sp"
                android:textColor="@color/black">
            </Button>
            <Button
                android:id="@+id/btn5"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:layout_marginRight="2pt"
                android:backgroundTint="@color/bluebg"
                android:text="5"
                android:textSize="26sp"
                android:textColor="@color/black">
            </Button>
            <Button
                android:id="@+id/btn6"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:layout_marginRight="2pt"
                android:backgroundTint="@color/bluebg"
                android:text="6"
                android:textSize="26sp"
                android:textColor="@color/black">
            </Button>
            <Button
                android:id="@+id/btnminus"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:layout_marginRight="2pt"
                android:backgroundTint="@color/bluebg"
                android:text="-"
                android:textSize="26sp"
                android:textColor="@color/black">
            </Button>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btn1"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:layout_marginRight="2pt"
                android:backgroundTint="@color/bluebg"
                android:text="1"
                android:textSize="26sp"
                android:textColor="@color/black">
            </Button>
            <Button
                android:id="@+id/btn2"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:layout_marginRight="2pt"
                android:backgroundTint="@color/bluebg"
                android:text="2"
                android:textSize="26sp"
                android:textColor="@color/black">
            </Button>
            <Button
                android:id="@+id/btn3"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:layout_marginRight="2pt"
                android:backgroundTint="@color/bluebg"
                android:text="3"
                android:textSize="26sp"
                android:textColor="@color/black">
            </Button>
            <Button
                android:id="@+id/btnplus"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:layout_marginRight="2pt"
                android:backgroundTint="@color/bluebg"
                android:text="+"
                android:textSize="26sp"
                android:textColor="@color/black">
            </Button>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btndot"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:layout_marginRight="2pt"
                android:backgroundTint="@color/bluebg"
                android:text="."
                android:textSize="26sp"
                android:textColor="@color/black"
                android:onClick="numEvent">
            </Button>
            <Button
                android:id="@+id/btn0"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:layout_marginRight="2pt"
                android:backgroundTint="@color/bluebg"
                android:text="0"
                android:textSize="26sp"
                android:textColor="@color/black">
            </Button>

            <Button
                android:id="@+id/btnsqroot"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:layout_marginRight="2pt"
                android:backgroundTint="@color/bluebg"
                android:text="√"
                android:textSize="26sp"
                android:textColor="@color/black">
            </Button>
            <Button
                android:id="@+id/btnequal"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:layout_marginRight="2pt"
                android:backgroundTint="@color/orange"
                android:text="="
                android:textSize="26sp"
                android:textColor="@color/black">
            </Button>
        </TableRow>
    </TableLayout>
</LinearLayout>